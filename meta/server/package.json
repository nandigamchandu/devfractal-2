{
  "name": "technoidentity-meta-server",
  "version": "0.0.1",
  "description": "Meta utilities for server.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "author": "Pervez Iqbal",
  "private": true,
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "cross-env NODE_ENV='test' jest",
    "test:watch": "yarn test --watch",
    "lint": "yarn tslint -p . -c tslint.json 'src/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "types": "tsc --noEmit -p .",
    "types:watch": "yarn types --watch",
    "validate": "yarn lint:fix && yarn types && yarn test"
  },
  "dependencies": {
    "tcomb": "3.2.29",
    "technoidentity-meta-core": "*",
    "technoidentity-utils": "*",
    "tslib": "1.10.0"
  },
  "devDependencies": {
    "@types/express": "4.17.0",
    "@types/jest": "24.0.15",
    "@types/mongodb": "3.1.30",
    "@types/mongoose": "5.5.11",
    "cross-env": "5.2.0",
    "express": "4.17.1",
    "fp-ts": "2.0.3",
    "io-ts-types": "0.5.0",
    "io-ts": "2.0.0",
    "jest-cli": "24.8.0",
    "jest": "24.8.0",
    "mongodb": "3.2.7",
    "mongoose": "5.6.7",
    "monocle-ts": "2.0.0",
    "supertest": "4.0.2",
    "tcomb": "3.2.29",
    "ts-jest": "24.0.2",
    "tsdx": "0.7.2"
  },
  "peerDependencies": {
    "express": "4.17.1",
    "fp-ts": "2.0.3",
    "io-ts-types": "0.5.0",
    "io-ts": "2.0.0",
    "mongodb": "3.2.7",
    "mongoose": "5.6.7",
    "monocle-ts": "2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn validate"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:fix",
      "git add"
    ],
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "yarn prettier --write",
      "git add"
    ]
  }
}
