{
  "name": "@technoidentity/meta-core",
  "version": "0.0.1",
  "description": "meta data, similar to json schema",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.production.js",
  "module": "dist/index.es.production.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Pervez Iqbal",
  "private": true,
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf dist .cache build .rts2_cache_*",
    "clean:dist": "rimraf node_modules yarn.lock",
    "refresh": "yarn clean && yarn clean:dist && yarn",
    "lint:cmd": "tslint -p tsconfig.json -c tslint.json",
    "lint": "yarn lint:cmd 'src/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "types": "tsc --noEmit -p .",
    "types:watch": "yarn types --watch",
    "validate": "yarn lint && yarn types && yarn test"
  },
  "peerDependencies": {
    "io-ts": "1.9.0",
    "io-ts-types": "0.4.7",
    "tcomb": "3.2.29",
    "tcomb-validation": "3.4.1"
  },
  "dependencies": {
    "@technoidentity/utils": "0.0.1"
  },
  "devDependencies": {
    "@types/jest": "24.0.14",
    "@types/json-schema": "7.0.3",
    "ajv": "6.10.0",
    "io-ts": "1.9.0",
    "io-ts-types": "0.4.7",
    "jest": "24.8.0",
    "jest-cli": "24.8.0",
    "json-schema": "0.2.3",
    "tcomb": "3.2.29",
    "tcomb-validation": "3.4.1",
    "ts-jest": "24.0.2",
    "tsdx": "0.6.1"
  }
}
