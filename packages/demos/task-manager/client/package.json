{
  "name": "demo-task-manager-client",
  "version": "1.2.18",
  "private": true,
  "dependencies": {
    "bulma": "0.7.5",
    "date-fns": "2.0.1",
    "devfractal-api": "^1.2.18",
    "devfractal-crud": "^1.2.18",
    "devfractal-forms": "^1.2.18",
    "devfractal-router": "^1.2.18",
    "devfractal-simple": "^1.2.18",
    "devfractal-ui": "^1.2.18",
    "devfractal-ui-api": "^1.2.18",
    "devfractal-ui-core": "^1.2.18",
    "formik": "1.5.8",
    "immer": "3.2.0",
    "technoidentity-spec": "*",
    "react": "16.9.0",
    "react-datepicker": "2.8.0",
    "react-dom": "16.9.0",
    "react-use": "11.3.2",
    "technoidentity-utils": "^1.2.18",
    "yup": "0.27.0"
  },
  "devDependencies": {
    "cross-env": "5.2.0",
    "eslint": "6.2.2",
    "husky": "3.0.4",
    "jest": "24.9.0",
    "json-server": "0.15.0",
    "lint-staged": "9.2.5",
    "prettier": "1.18.2",
    "rimraf": "3.0.0",
    "tslint": "5.19.0",
    "typescript": "3.5.3"
  },
  "scripts": {
    "precommit": "yarn lint-staged",
    "prepush": "yarn validate:noFix",
    "start": "parcel index.html --open",
    "build": "parcel build index.html",
    "server": "json-server data/todos.json",
    "test": "cross-env NODE_ENV='test' jest --passWithNoTests",
    "test:watch": "yarn test --watch",
    "lint": "yarn tslint -p . -c tslint.json 'src/**/*.tsx' 'src/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "types": "tsc --noEmit -p .",
    "types:watch:verbose": "cross-env TSC_WATCHFILE=UseFsEventsWithFallbackDynamicPolling yarn types --watch --preserveWatchOutput",
    "types:watch": "cross-env TSC_WATCHFILE=UseFsEventsWithFallbackDynamicPolling yarn types --watch",
    "validate:noFix": "yarn lint && yarn types && yarn test",
    "validate": "yarn lint:fix && yarn types && yarn test"
  },
  "resolutions": {
    "react": "16.9.0",
    "react-dom": "16.9.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:fix",
      "git add"
    ],
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "yarn prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
