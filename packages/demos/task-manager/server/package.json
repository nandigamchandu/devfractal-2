{
  "name": "demo-task-manager-server",
  "version": "1.2.3",
  "description": "Node Web API Starter using express and mongoose",
  "main": "build/main.js",
  "author": "Pervez Iqbal",
  "private": true,
  "scripts": {
    "precommit": "yarn lint-staged",
    "prepush": "yarn validate:noFix",
    "start": "backpack",
    "build": "backpack build",
    "test": "cross-env NODE_ENV='test' jest",
    "test:watch": "yarn test --watch",
    "lint:cmd": "tslint -p tsconfig.json -c tslint.json",
    "lint": "yarn lint:cmd 'src/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "types": "tsc --noEmit -p .",
    "types:watch": "cross-env TSC_WATCHFILE=UseFsEventsWithFallbackDynamicPolling yarn types --watch",
    "validate:noFix": "yarn lint && yarn types && yarn test",
    "validate": "yarn lint:fix && yarn types && yarn test"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "connect-mongo": "3.0.0",
    "cors": "2.8.5",
    "express": "4.17.1",
    "express-session": "1.16.2",
    "fp-ts": "2.0.3",
    "http-status-codes": "1.3.2",
    "io-ts": "2.0.0",
    "io-ts-types": "0.5.0",
    "mongodb": "3.2.7",
    "mongoose": "5.6.7",
    "mongoose-paginate": "5.0.3",
    "mongoose-unique-validator": "2.0.3",
    "monocle-ts": "2.0.0",
    "tcomb": "3.2.29",
    "technoidentity-utils": "^*"
  },
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "7.5.5",
    "@babel/preset-typescript": "7.3.3",
    "@types/body-parser": "1.17.0",
    "@types/cors": "2.8.5",
    "@types/express": "4.17.0",
    "@types/express-session": "1.15.13",
    "@types/jest": "24.0.16",
    "@types/mongodb": "3.1.31",
    "@types/mongoose": "5.5.11",
    "@types/mongoose-paginate": "5.0.6",
    "@types/mongoose-unique-validator": "1.0.2",
    "babel-jest": "24.8.0",
    "babel-loader": "8.0.6",
    "backpack-core": "0.8.4",
    "husky": "3.0.2",
    "jest": "24.8.0",
    "jest-cli": "24.8.0",
    "lint-staged": "9.2.1",
    "prettier": "1.18.2",
    "rimraf": "2.6.3",
    "source-map-loader": "0.2.4",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-immutable": "6.0.1",
    "typescript": "3.5.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:fix",
      "git add"
    ],
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "yarn prettier --write",
      "git add"
    ]
  }
}
