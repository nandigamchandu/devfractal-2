{
  "name": "diya-project",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "date-fns": "1.30.1",
    "formik": "1.5.8",
    "fp-ts": "2.0.5",
    "io-ts": "2.0.1",
    "io-ts-types": "0.5.0",
    "lodash-es": "^4.17.15",
    "monocle-ts": "2.0.0",
    "react": "16.9.0",
    "react-datepicker": "2.8.0",
    "react-dom": "16.9.0",
    "react-router": "5.0.1",
    "react-router-dom": "5.0.1",
    "tcomb": "3.2.29",
    "technoidentity-dev-utils": "1.2.11",
    "technoidentity-devfractal": "^1.2.12",
    "yup": "0.27.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "4.0.0",
    "@testing-library/react": "9.0.2",
    "@types/jest": "24.0.17",
    "@types/lodash-es": "^4.17.3",
    "@types/node": "12.7.1",
    "@types/react": "16.9.1",
    "@types/react-dom": "16.8.5",
    "@types/react-router-dom": "4.3.4",
    "@types/yup": "0.26.22",
    "cross-env": "5.2.0",
    "husky": "3.0.3",
    "jest": "24.8.0",
    "jest-cli": "24.8.0",
    "lint-staged": "9.2.1",
    "parcel-bundler": "1.12.3",
    "prettier": "1.18.2",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-immutable": "6.0.1",
    "tslint-react": "4.0.0",
    "typescript": "3.5.3",
    "typescript-tslint-plugin": "0.5.4"
  },
  "proxy": "http://localhost:9999",
  "scripts": {
    "server": "cross-env PORT=9999 ts-node --project tsconfig.tsnode.json src/db.ts",
    "start": "parcel index.html --open",
    "build": "parcel build index.html",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --env=jsdom --watch",
    "destroy": "git clean -dfx",
    "up": "lerna exec -- ncu -u",
    "lint": "yarn tslint -p . -c tslint.json 'src/**/*.tsx' 'src/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "types": "tsc --noEmit -p .",
    "types:watch": "yarn types --watch",
    "validate": "yarn lint && yarn types && yarn test",
    "all": "yarn validate && yarn start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "pre-push": "yarn validate",
      "pre-build": "yarn validate"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:fix",
      "git add"
    ],
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "yarn prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
