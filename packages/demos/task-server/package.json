{
  "name": "demo-task-manager-server",
  "version": "1.2.18",
  "description": "Node Web API Starter using express and mongoose",
  "main": "build/main.js",
  "author": "Pervez Iqbal",
  "private": true,
  "scripts": {
    "precommit": "yarn lint-staged",
    "prepush": "yarn validate:noFix",
    "start": "backpack",
    "build": "backpack build",
    "test": "cross-env NODE_ENV='test' jest --passWithNoTests",
    "test:watch": "yarn test --watch",
    "lint:cmd": "tslint -p tsconfig.json -c tslint.json",
    "lint": "yarn lint:cmd 'src/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "types": "tsc --noEmit -p .",
    "types:watch:verbose": "cross-env TSC_WATCHFILE=UseFsEventsWithFallbackDynamicPolling yarn types --watch --preserveWatchOutput",
    "types:watch": "cross-env TSC_WATCHFILE=UseFsEventsWithFallbackDynamicPolling yarn types --watch",
    "validate:noFix": "yarn lint && yarn types && yarn test",
    "validate": "yarn lint:fix && yarn types && yarn test"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "connect-mongo": "3.0.0",
    "cors": "2.8.5",
    "express": "4.17.1",
    "express-session": "1.16.2",
    "http-status-codes": "1.3.2",
    "technoidentity-spec": "*",
    "mongodb": "3.3.2",
    "mongoose": "5.6.11",
    "mongoose-paginate": "5.0.3",
    "mongoose-unique-validator": "2.0.3",
    "tcomb": "3.2.29",
    "technoidentity-utils": "1.2.18"
  },
  "devDependencies": {
    "backpack-core": "0.8.4",
    "eslint": "6.3.0",
    "husky": "3.0.4",
    "jest": "24.9.0",
    "lint-staged": "9.2.5",
    "prettier": "1.18.2",
    "rimraf": "3.0.0",
    "source-map-loader": "0.2.4",
    "tslint": "5.19.0",
    "typescript": "3.5.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:fix",
      "git add"
    ],
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "yarn prettier --write",
      "git add"
    ]
  }
}
