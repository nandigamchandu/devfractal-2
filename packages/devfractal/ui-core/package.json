{
  "name": "devfractal-ui-core",
  "version": "1.2.1",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/devfractal-ui-core.esm.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "lib": "tsdx watch",
    "build": "tsdx build",
    "start": "parcel index.html --open",
    "test": "cross-env NODE_ENV='test' jest",
    "test:watch": "yarn test --watch",
    "elint": "eslint './src/**/*.{js,ts,tsx}'",
    "elint:fix": "yarn elint --quiet --fix",
    "lint": "yarn tslint -p . -c tslint.json 'src/**/*.tsx' 'src/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "types": "tsc --noEmit -p .",
    "types:watch": "cross-env TSC_WATCHFILE=UseFsEventsWithFallbackDynamicPolling yarn types --watch",
    "validate:noFix": "yarn lint && yarn types && yarn test",
    "validate": "yarn lint:fix && yarn types && yarn test",
    "sg": "styleguidist server",
    "sg:build": "styleguidist build"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.20",
    "@fortawesome/free-brands-svg-icons": "5.10.0",
    "@fortawesome/free-regular-svg-icons": "5.10.0",
    "@fortawesome/free-solid-svg-icons": "5.10.0",
    "@fortawesome/react-fontawesome": "0.1.4",
    "bulma": "0.7.5",
    "tslib": "1.10.0"
  },
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@testing-library/jest-dom": "4.0.0",
    "@testing-library/react": "8.0.7",
    "@types/jest": "24.0.16",
    "@types/react": "16.8.24",
    "@types/react-dom": "16.8.5",
    "@typescript-eslint/eslint-plugin": "1.13.0",
    "@typescript-eslint/parser": "1.13.0",
    "eslint": "6.1.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-react": "7.14.3",
    "fp-ts": "2.0.3",
    "husky": "3.0.2",
    "io-ts": "2.0.0",
    "io-ts-types": "0.5.0",
    "jest": "24.8.0",
    "jest-cli": "24.8.0",
    "lint-staged": "9.2.1",
    "monocle-ts": "2.0.0",
    "prettier": "1.18.2",
    "react": "16.8.6",
    "react-docgen-typescript": "1.12.5",
    "react-docgen-typescript-loader": "3.1.0",
    "react-dom": "16.8.6",
    "react-styleguidist": "9.1.13",
    "technoidentity-utils": "1.2.1",
    "tsdx": "0.7.2",
    "webpack": "4.39.1",
    "webpack-blocks": "2.0.1",
    "yup": "0.27.0"
  },
  "peerDependencies": {
    "fp-ts": "2.0.3",
    "io-ts": "2.0.0",
    "io-ts-types": "0.5.0",
    "monocle-ts": "2.0.0",
    "react": "16.8.6",
    "react-dom": "16.8.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "pre-push": "yarn validate:noFix"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:fix",
      "git add"
    ],
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "yarn prettier --write",
      "git add"
    ]
  }
}
