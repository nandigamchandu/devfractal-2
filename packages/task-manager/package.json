{
  "name": "react-starter",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "0.19.0",
    "bulma": "0.7.5",
    "chance": "1.0.18",
    "cors": "2.8.5",
    "date-fns": "1.30.1",
    "formik": "1.5.7",
    "io-ts": "1.10.2",
    "io-ts-promise": "1.1.1",
    "io-ts-reporters": "0.0.21",
    "query-string": "6.8.1",
    "react": "16.8.6",
    "react-datepicker": "2.7.0",
    "react-dom": "16.8.6",
    "react-router": "5.0.1",
    "react-router-dom": "5.0.1",
    "react-use": "^9.8.1",
    "tcomb": "3.2.29",
    "technoidentity-devfractal": "0.7.8",
    "technoidentity-utils": "0.0.1",
    "typelevel-ts": "0.3.5",
    "use-immer": "0.3.2",
    "yup": "0.27.0"
  },
  "devDependencies": {
    "@types/chance": "1.0.4",
    "@types/jest": "24.0.15",
    "@types/node": "12.0.10",
    "@types/react": "16.8.22",
    "@types/react-datepicker": "2.3.0",
    "@types/react-dom": "16.8.4",
    "@types/react-router-dom": "4.3.4",
    "@types/yup": "0.26.18",
    "husky": "2.7.0",
    "jest": "24.8.0",
    "jest-dom": "3.5.0",
    "lint-staged": "8.2.1",
    "parcel-bundler": "1.12.3",
    "prettier": "1.18.2",
    "react-testing-library": "8.0.1",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.2",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-immutable": "6.0.0",
    "tslint-react": "4.0.0",
    "typescript": "3.5.2",
    "typescript-tslint-plugin": "0.5.3"
  },
  "scripts": {
    "start": "parcel index.html --open",
    "build": "parcel build index.html",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint:cmd": "tslint -p tsconfig.commit.json -c tslint.commit.json",
    "lint": "yarn lint:cmd 'src/**/*.tsx' 'src/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "types": "tsc --noEmit -p tsconfig.commit.json",
    "types:watch": "yarn types --watch",
    "validate": "yarn lint && yarn types && yarn test"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn validate"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:cmd --fix",
      "git add"
    ],
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "yarn prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
