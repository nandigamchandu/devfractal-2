{
  "name": "technoidentity-utils",
  "version": "0.1.1",
  "description": "utils for all devfractal libs",
  "main": "dist/index.js",
  "module": "dist/technoidentity-utils.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Pervez Iqbal",
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "cross-env NODE_ENV='test' jest",
    "test:watch": "yarn test --watch",
    "lint": "yarn tslint -p . -c tslint.json 'src/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "types": "tsc --noEmit -p .",
    "types:watch": "cross-env TSC_WATCHFILE=UseFsEventsWithFallbackDynamicPolling yarn types --watch",
    "validate": "yarn lint:fix && yarn types && yarn test"
  },
  "dependencies": {
    "chance": "1.0.18",
    "tslib": "1.10.0"
  },
  "devDependencies": {
    "@types/chance": "1.0.5",
    "@types/jest": "24.0.15",
    "date-fns": "1.30.1",
    "fp-ts": "2.0.3",
    "io-ts": "2.0.0",
    "io-ts-types": "0.5.0",
    "jest": "24.8.0",
    "jest-cli": "24.8.0",
    "monocle-ts": "2.0.0",
    "tcomb": "3.2.29",
    "ts-jest": "24.0.2",
    "tsdx": "0.7.2"
  },
  "peerDependencies": {
    "date-fns": "1.30.1",
    "fp-ts": "2.0.3",
    "io-ts": "2.0.0",
    "io-ts-types": "0.5.0",
    "monocle-ts": "2.0.0",
    "tcomb": "3.2.29"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn validate"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:fix",
      "git add"
    ],
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "yarn prettier --write",
      "git add"
    ]
  }
}
