  "scripts": {
    "start": "parcel index.html --open",
    "prebuild": "yarn clean",
    "build": "parcel build index.html",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf dist .cache build .rts2_cache_*",
    "clean:dist": "rimraf node_modules yarn.lock",
    "clean:all": "yarn clean && yarn clean:dist",
    "refresh": "yarn clean && yarn clean:dist && yarn",
    "lint:cmd": "tslint -p tsconfig.json -c tslint.json",
    "lint": "yarn lint:cmd 'src/**/*.tsx' 'src/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "types": "tsc --noEmit -p tsconfig.json",
    "types:watch": "tsc --noEmit -p tsconfig.json --watch",
    "validate": "yarn lint && yarn types && yarn types"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn validate",
      "pre-build": "yarn validate",
      "pre-publish": "yarn validate"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:cmd --fix",
      "git add"
    ],
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "yarn prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
