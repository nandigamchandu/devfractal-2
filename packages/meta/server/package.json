{
  "name": "meta-server",
  "version": "1.2.18",
  "description": "Meta utilities for server.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "author": "Pervez Iqbal",
  "private": true,
  "scripts": {
    "precommit": "yarn lint-staged",
    "prepush": "yarn validate:noFix",
    "watch": "tsdx watch --tsconfig tsconfig.build.json",
    "build": "tsdx build --tsconfig tsconfig.build.json",
    "test": "cross-env NODE_ENV='test' jest",
    "test:watch": "yarn test --watch",
    "lint": "yarn tslint -p . -c tslint.json 'src/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "types": "tsc --noEmit -p .",
    "types:watch:verbose": "cross-env TSC_WATCHFILE=UseFsEventsWithFallbackDynamicPolling yarn types --watch --preserveWatchOutput",
    "types:watch": "cross-env TSC_WATCHFILE=UseFsEventsWithFallbackDynamicPolling yarn types --watch",
    "validate:noFix": "yarn lint && yarn types && yarn test",
    "validate": "yarn lint:fix && yarn types && yarn test"
  },
  "dependencies": {
    "tcomb": "3.2.29",
    "tslib": "1.10.0"
  },
  "devDependencies": {
    "eslint": "6.3.0",
    "express": "4.17.1",
    "technoidentity-spec": "*",
    "jest": "24.9.0",
    "mongodb": "3.3.2",
    "meta-core": "1.2.18",
    "technoidentity-utils": "1.2.18",
    "tsdx": "0.9.0",
    "cross-env": "5.2.0",
    "lint-staged": "9.2.5",
    "prettier": "1.18.2",
    "tslint": "5.19.0",
    "typescript": "3.5.3"
  },
  "peerDependencies": {
    "express": "4.17.1",
    "mongodb": "3.3.2",
    "mongoose": "5.6.11",
    "meta-core": "1.2.5"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:fix",
      "git add"
    ],
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "yarn prettier --write",
      "git add"
    ]
  }
}
