{
  "name": "meta-core",
  "version": "1.2.18",
  "description": "meta data, similar to json schema",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Pervez Iqbal",
  "private": true,
  "scripts": {
    "precommit": "yarn lint-staged",
    "prepush": "yarn validate:noFix",
    "watch": "tsdx watch --tsconfig tsconfig.build.json",
    "build": "tsdx build --tsconfig tsconfig.build.json",
    "test": "cross-env NODE_ENV='test' jest --passWithNoTests",
    "test:watch": "yarn test --watch",
    "lint": "yarn tslint -p . -c tslint.json 'src/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "types": "tsc --noEmit -p .",
    "types:watch:verbose": "cross-env TSC_WATCHFILE=UseFsEventsWithFallbackDynamicPolling yarn types --watch --preserveWatchOutput",
    "types:watch": "cross-env TSC_WATCHFILE=UseFsEventsWithFallbackDynamicPolling yarn types --watch",
    "validate:noFix": "yarn lint && yarn types && yarn test",
    "validate": "yarn lint:fix && yarn types && yarn test"
  },
  "dependencies": {
    "tslib": "1.10.0"
  },
  "devDependencies": {
    "@types/json-schema": "7.0.3",
    "ajv": "6.10.2",
    "eslint": "6.3.0",
    "jest": "24.9.0",
    "json-schema": "0.2.3",
    "tcomb-validation": "3.4.1",
    "technoidentity-spec": "*",
    "technoidentity-utils": "1.2.18",
    "cross-env": "5.2.0",
    "lint-staged": "9.2.5",
    "prettier": "1.18.2",
    "tslint": "5.19.0",
    "typescript": "3.5.3",
    "tsdx": "0.9.0"
  },
  "peerDependencies": {
    "technoidentity-utils": "1.2.18"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:fix",
      "git add"
    ],
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "yarn prettier --write",
      "git add"
    ]
  }
}
