{
  "name": "technoidentity-meta-core",
  "version": "1.0.0",
  "description": "meta data, similar to json schema",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Pervez Iqbal",
  "private": true,
  "scripts": {
    "lib": "tsdx watch",
    "build": "tsdx build",
    "test": "cross-env NODE_ENV='test' jest",
    "test:watch": "yarn test --watch",
    "lint": "yarn tslint -p . -c tslint.json 'src/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "types": "tsc --noEmit -p .",
    "types:watch": "cross-env TSC_WATCHFILE=UseFsEventsWithFallbackDynamicPolling yarn types --watch",
    "validate:noFix": "yarn lint && yarn types && yarn test",
    "validate": "yarn lint:fix && yarn types && yarn test"
  },
  "dependencies": {
    "tslib": "1.10.0"
  },
  "devDependencies": {
    "@types/jest": "24.0.16",
    "@types/json-schema": "7.0.3",
    "ajv": "6.10.2",
    "fp-ts": "2.0.3",
    "io-ts": "2.0.0",
    "io-ts-types": "0.5.0",
    "jest": "24.8.0",
    "jest-cli": "24.8.0",
    "json-schema": "0.2.3",
    "monocle-ts": "2.0.0",
    "tcomb": "3.2.29",
    "tcomb-validation": "3.4.1",
    "technoidentity-utils": "^1.0.0",
    "ts-jest": "24.0.2",
    "tsdx": "0.7.2"
  },
  "peerDependencies": {
    "fp-ts": "2.0.3",
    "io-ts": "2.0.0",
    "io-ts-types": "0.5.0",
    "monocle-ts": "2.0.0",
    "tcomb": "3.2.29",
    "technoidentity-utils": "*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn validate:noFix"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:fix",
      "git add"
    ],
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "yarn prettier --write",
      "git add"
    ]
  }
}
