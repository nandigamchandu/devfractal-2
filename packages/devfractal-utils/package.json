{
  "name": "technoidentity-utils",
  "version": "0.0.5",
  "description": "utils for all devfractal libs",
  "main": "dist/index.js",
  "module": "dist/devfractal-utils.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Pervez Iqbal",
  "scripts": {
    "start": "tsdx watch",
    "dev": "parcel index.html --open",
    "build": "tsdx build",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf dist .cache build .rts2_cache_*",
    "clean:dist": "rimraf node_modules yarn.lock",
    "refresh": "yarn clean && yarn clean:dist && yarn",
    "lint:cmd": "tslint -p tsconfig.json -c tslint.json",
    "lint": "yarn lint:cmd 'src/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "types": "tsc --noEmit -p .",
    "types:watch": "yarn types --watch",
    "validate": "yarn lint && yarn types && yarn test"
  },
  "peerDependencies": {
    "date-fns": "1.30.1",
    "fp-ts": "1.19.3",
    "io-ts": "1.10.2",
    "io-ts-types": "0.4.7",
    "tcomb": "3.2.29"
  },
  "devDependencies": {
    "@types/jest": "24.0.15",
    "date-fns": "1.30.1",
    "fp-ts": "1.19.3",
    "io-ts": "1.10.2",
    "io-ts-types": "0.4.7",
    "jest": "24.8.0",
    "jest-cli": "24.8.0",
    "parcel-bundler": "1.12.3",
    "tcomb": "3.2.29",
    "ts-jest": "24.0.2",
    "tsdx": "0.7.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:cmd --fix",
      "git add"
    ],
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "yarn prettier --write",
      "git add"
    ]
  }
}
