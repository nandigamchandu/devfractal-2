{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/utils",
    "packages/devfractal/*",
    "packages/meta/*",
    "packages/demos/task-manager/*"
  ],
  "devDependencies": {
    "cross-env": "5.2.0",
    "husky": "3.0.1",
    "json-server": "0.15.0",
    "lerna": "3.16.4",
    "typescript": "3.5.3",
    "typescript-tslint-plugin": "0.5.4"
  },
  "scripts": {
    "boot:lib": "yarn && yarn build:lib && yarn validate:lib",
    "boot:meta": "yarn && yarn build:meta && yarn validate:meta",
    "boot": "yarn && yarn build && yarn validate",
    "lib:lib": "lerna run lib --scope='technoidentity-devfractal-*' --scope='technoidentity-utils'",
    "lib:meta": "lerna run lib --scope='technoidentity-meta-*'",
    "lib": "yarn lib:lib && yarn lib:meta",
    "build:lib": "lerna run build --scope='technoidentity-devfractal-*' --scope='technoidentity-utils'",
    "build:meta": "lerna run build --scope='technoidentity-meta-*'",
    "build": "yarn build:lib && yarn build:meta",
    "test:lib": "lerna run test --scope='technoidentity-meta-*'",
    "test:meta": "lerna run test --scope='technoidentity-devfractal-*' --scope='technoidentity-utils'",
    "test": "lerna run test",
    "lint:lib": "lerna run lint --scope='technoidentity-devfractal-*' --scope='technoidentity-utils'",
    "lint:meta": "lerna run lint --scope='technoidentity-meta-*'",
    "lint": "lerna run lint",
    "types:watch:lib": "lerna run --scope='technoidentity-devfractal-*' --scope='technoidentity-utils' --parallel types:watch",
    "types:watch:meta": "lerna run --scope='technoidentity-devfractal-*' --scope='technoidentity-utils' --parallel types:watch",
    "types:watch": "lerna run --parallel types:watch",
    "validate:lib": "lerna run validate --scope='technoidentity-devfractal-*' --scope='technoidentity-utils'",
    "validate:meta": "lerna run validate --scope='technoidentity-meta-*'",
    "validate": "lerna run validate",
    "clean": "lerna exec -- yarn run rimraf dist .cache build .rts2_cache_*",
    "clean:dist": "lerna clean && yarn run rimraf node_modules",
    "clean:all": "yarn clean && yarn clean:dist",
    "refresh": "yarn clean:all && yarn && yarn build && yarn validate",
    "publish:lib": "lerna publish --scope='technoidentity-devfractal-*' --scope='technoidentity-utils'",
    "publish:meta": "lerna publish --scope='technoidentity-meta-*'",
    "destroy": "git clean -dfx",
    "up": "ncu -u && lerna exec -- ncu -u",
    "upr": "lerna run up && yarn refresh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream precommit",
      "pre-push": "yarn validate"
    }
  }
}
