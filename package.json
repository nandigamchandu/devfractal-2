    "@types/json-server": "0.14.2",
    "@types/mongodb": "3.3.6",
    "@types/mongoose": "5.5.22",
    "@types/mongoose-paginate": "5.0.8",
    "@types/mongoose-unique-validator": "1.0.3",
    "@types/node": "12.11.2",
    "@types/react": "16.9.9",
