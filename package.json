{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/utils",
    "packages/dev-utils",
    "packages/devfractal/*",
    "packages/meta/*",
    "packages/demos/presentation",
    "packages/demos/task-manager/*",
    "packages/demos/diya"
  ],
  "devDependencies": {
    "confusing-browser-globals": "1.0.8",
    "cross-env": "5.2.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.14.3",
    "eslint-plugin-react-hooks": "2.0.1",
    "husky": "3.0.4",
    "json-server": "0.15.0",
    "lerna": "3.16.4",
    "typescript": "3.5.3",
    "typescript-tslint-plugin": "0.5.4"
  },
  "scripts": {
    "boot:lib": "yarn && yarn build:lib && yarn validate:lib",
    "boot:meta": "yarn && yarn build:meta && yarn validate:meta",
    "boot": "yarn && yarn build && yarn validate",
    "lib:lib": "lerna run --parallel lib --scope='devfractal-*' --scope='technoidentity-*'",
    "lib:meta": "lerna run --parallel lib --scope='technoidentity-meta-*'",
    "lib": "yarn lib:lib && yarn lib:meta",
    "build:lib": "lerna run build --scope='devfractal-*' --scope='technoidentity-*'",
    "build:meta": "lerna run build --scope='technoidentity-meta-*'",
    "build": "lerna run build",
    "test:lib": "lerna run test --scope='technoidentity-meta-*'",
    "test:meta": "lerna run test --scope='devfractal-*' --scope='technoidentity-*'",
    "test": "lerna run test",
    "lint:lib": "lerna run lint --scope='devfractal-*' --scope='technoidentity-*'",
    "lint:meta": "lerna run lint --scope='technoidentity-meta-*'",
    "lint": "lerna run lint",
    "types:watch:lib": "lerna run --scope='devfractal-*' --scope='technoidentity-*' --parallel types:watch:verbose",
    "types:watch:meta": "lerna run --scope='devfractal-*' --scope='technoidentity-*' --parallel types:watch:verbose",
    "types:watch": "lerna run --parallel types:watch",
    "validate:lib": "lerna run validate --scope='devfractal-*' --scope='technoidentity-*'",
    "validate:meta": "lerna run validate --scope='technoidentity-meta-*'",
    "validate": "lerna run validate",
    "validate:noFix": "lerna run validate:noFix",
    "clean": "lerna exec -- yarn run rimraf dist .cache build .rts2_cache_*",
    "clean:dist": "lerna clean && yarn run rimraf node_modules",
    "clean:all": "yarn clean && yarn clean:dist",
    "refresh": "yarn clean:all && yarn && yarn build && yarn validate",
    "publish:lib": "lerna publish --scope='devfractal-*' --scope='technoidentity-*'",
    "publish:meta": "lerna publish --scope='technoidentity-meta-*'",
    "prepublish:lib": "yarn destroy && yarn boot:lib",
    "prepublish:meta": "yarn destroy && yarn boot:meta",
    "publish": "lerna publish",
    "destroy": "git clean -dfx",
    "up:lib": "ncu -u && lerna exec -- ncu -u --scope='devfractal-*' --scope='technoidentity-*'",
    "up:meta": "ncu -u && lerna exec -- ncu -u --scope='technoidentity-meta-*'",
    "up": "ncu -u && lerna exec -- ncu -u",
    "upr": "lerna run up && yarn refresh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream precommit",
      "pre-push": "yarn validate:noFix"
    }
  },
  "version": "0.0.0"
}
