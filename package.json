{
  "name": "react-starter",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/classnames": "^2.2.6",
    "@types/jest": "23.3.9",
    "@types/node": "10.12.9",
    "@types/react": "16.7.6",
    "@types/react-dom": "16.0.9",
    "chance": "^1.0.16",
    "classnames": "^2.2.6",
    "date-fns": "^1.29.0",
    "formik": "^1.3.2",
    "husky": "^1.1.4",
    "immer": "^1.8.0",
    "lint-staged": "^8.0.5",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.1",
    "rxjs": "^6.3.3",
    "tcomb": "^3.2.29",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-immutable": "^4.9.1",
    "tslint-react": "^3.6.0",
    "typescript": "3.1.6"
  },
  "scripts": {
    "lint": "tslint -p tsconfig.json -c tslint.commit.json 'src/**/*.tsx' 'src/**/*.ts'",
    "typecheck": "tsc --noEmit -p .",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:single": "CI=true react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run typecheck && lint-staged && yarn run test:single"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn run lint"
    ],
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
