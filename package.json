{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/common/*",
    "packages/demos/*",
    "packages/devfractal/*",
    "packages/meta/*",
    "packages/sites/site"
  ],
  "scripts": {
    "boot:common": "yarn && yarn build:common && yarn validate:common",
    "boot:demos": "yarn && yarn build:demos && yarn validate:demos",
    "boot:lib": "yarn && yarn build:lib && yarn validate:lib",
    "boot:meta": "yarn && yarn build:meta && yarn validate:meta",
    "boot": "yarn && yarn build && yarn validate",
    "build:common": "lerna run build --scope='technoidentity-*'",
    "build:demos": "lerna run build --scope='demo-*'",
    "build:lib": "lerna run build --scope='devfractal-*'",
    "build:meta": "lerna run build --scope='meta-*'",
    "build": "lerna run build",
    "clean:all": "yarn clean && yarn clean:dist",
    "clean:dist": "lerna clean && yarn run rimraf node_modules",
    "clean": "lerna exec -- yarn run rimraf dist .cache build .rts2_cache_* && yarn dev:clean",
    "destroy": "git clean -dfx",
    "dev:types": "yarn tsc --build packages",
    "dev:clean": "yarn tsc --build --clean packages",
    "dev:test": "yarn jest",
    "dev:test:watch": "yarn jest --watch",
    "dev:types:watch": "yarn tsc -b -w packages",
    "dev": "yarn clean && yarn concurrently \"yarn dev:types:watch\" \"yarn dev:test:watch\"",
    "lib:common": "lerna run --parallel lib --scope='technoidentity-*'",
    "lib:demos": "lerna run --parallel lib --scope='demo-*'",
    "lib:lib": "lerna run --parallel lib --scope='devfractal-*'",
    "lib:meta": "lerna run --parallel lib --scope='meta-*'",
    "lib": "lerna run lib",
    "lint:common": "lerna run lint --scope='technoidentity-*'",
    "lint:demos": "lerna run lint --scope='demo-*'",
    "lint:fix": "lerna run lint:fix",
    "lint:lib": "lerna run lint --scope='devfractal-*'",
    "lint:meta": "lerna run lint --scope='meta-*'",
    "lint": "lerna run lint",
    "publish:all": "lerna publish",
    "publish:common": "lerna publish --scope='technoidentity-*'",
    "publish:lib": "lerna publish --scope='devfractal-*'",
    "publish:meta": "lerna publish --scope='meta-*'",
    "refresh": "yarn clean:all && yarn && yarn build && yarn validate",
    "test:common": "lerna run test --scope='technoidentity-*'",
    "test:demos": "lerna run test --scope='demo-*'",
    "test:lib": "lerna run test --scope='devfractal-*'",
    "test:meta": "lerna run test --scope='meta-*'",
    "test": "lerna run test",
    "types:watch:common": "lerna run --scope='technoidentity-*' --parallel types:watch:verbose",
    "types:watch:lib": "lerna run --scope='devfractal-*' --parallel types:watch:verbose",
    "types:watch:meta": "lerna run --scope='devfractal-*' --parallel types:watch:verbose",
    "types:watch": "lerna run --parallel types:watch",
    "up:common": "ncu -u && lerna exec -- ncu -u  --scope='technoidentity-*'",
    "up:demo": "ncu -u && lerna exec -- ncu -u  --scope='demo-*'",
    "up:lib": "ncu -u && lerna exec -- ncu -u --scope='devfractal-*'",
    "up:meta": "ncu -u && lerna exec -- ncu -u --scope='meta-*'",
    "up": "ncu -u && lerna exec -- ncu -u",
    "upr": "lerna run up && yarn refresh",
    "validate:common": "lerna run validate --scope='technoidentity-*'",
    "validate:demos": "lerna run validate --scope='demo-*'",
    "validate:lib": "lerna run validate --scope='devfractal-*'",
    "validate:meta": "lerna run validate --scope='meta-*'",
    "validate:noFix": "lerna run validate:noFix",
    "validate": "lerna run validate"
  },
  "devDependencies": {
    "@babel/core": "7.6.0",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "7.5.5",
    "@babel/preset-typescript": "7.6.0",
    "@testing-library/jest-dom": "4.1.0",
    "@testing-library/react": "9.1.4",
    "@types/body-parser": "1.17.1",
    "@types/chance": "1.0.6",
    "@types/cleave.js": "1.4.0",
    "@types/cors": "2.8.6",
    "@types/express": "4.17.1",
    "@types/express-session": "1.15.14",
    "@types/jest": "24.0.18",
    "@types/json-server": "0.14.1",
    "@types/lodash-es": "4.17.3",
    "@types/mongodb": "3.3.1",
    "@types/mongoose": "5.5.17",
    "@types/mongoose-paginate": "5.0.6",
    "@types/mongoose-unique-validator": "1.0.2",
    "@types/node": "12.7.4",
    "@types/react": "16.9.2",
    "@types/react-datepicker": "2.9.2",
    "@types/react-dom": "16.9.0",
    "@types/react-router": "5.0.3",
    "@types/react-router-dom": "4.3.5",
    "@types/react-test-renderer": "^16.9.0",
    "@types/yup": "0.26.23",
    "@typescript-eslint/eslint-plugin": "2.2.0",
    "@typescript-eslint/parser": "2.2.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-eslint": "10.0.3",
    "babel-jest": "24.9.0",
    "babel-loader": "8.0.6",
    "bulma": "0.7.5",
    "concurrently": "^4.1.2",
    "confusing-browser-globals": "1.0.8",
    "cross-env": "5.2.1",
    "eslint-config-prettier": "6.2.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-react": "7.14.3",
    "eslint-plugin-react-hooks": "2.0.1",
    "firebase": "6.6.0",
    "formik": "1.5.8",
    "husky": "3.0.5",
    "lerna": "3.16.4",
    "lint-staged": "^9.2.5",
    "mongoose": "5.7.0",
    "react": "16.9.0",
    "react-datepicker": "2.9.6",
    "react-docgen-typescript": "1.14.0",
    "react-docgen-typescript-loader": "3.2.0",
    "react-dom": "16.9.0",
    "react-router": "5.0.1",
    "react-router-dom": "5.0.1",
    "supertest": "4.0.2",
    "tcomb": "3.2.29",
    "technoidentity-dev-utils": "1.2.18",
    "ts-jest": "24.0.2",
    "tslint-config-prettier": "1.18.0",
    "tslint-immutable": "6.0.1",
    "tslint-react": "4.0.0",
    "typescript": "3.5.3",
    "typescript-tslint-plugin": "0.5.4",
    "webpack": "4.39.3",
    "webpack-blocks": "2.0.1"
  }
}
