{
  "name": "react-starter",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@babel/core": "^7.1.6",
    "@storybook/addon-actions": "^4.1.0-alpha.8",
    "@storybook/addon-info": "^4.0.9",
    "@storybook/addon-links": "^4.1.0-alpha.8",
    "@storybook/addons": "^4.1.0-alpha.8",
    "@storybook/react": "^4.1.0-alpha.8",
    "@types/classnames": "^2.2.6",
    "@types/jest": "^23.3.9",
    "@types/node": "10.12.9",
    "@types/react": "16.7.6",
    "@types/react-dom": "16.0.9",
    "@types/storybook__addon-actions": "^3.4.1",
    "@types/storybook__addon-links": "^3.3.3",
    "@types/storybook__react": "^4.0.0",
    "babel-loader": "^8.0.4",
    "chance": "^1.0.16",
    "classnames": "^2.2.6",
    "date-fns": "^1.29.0",
    "formik": "^1.3.2",
    "husky": "^1.1.4",
    "immer": "^1.8.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.5",
    "react": "^16.6.3",
    "react-app-rewire-hot-loader": "^1.0.3",
    "react-app-rewired": "^1.6.2",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "react-dom": "^16.6.3",
    "react-hot-loader": "^4.5.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.1",
    "rxjs": "^6.3.3",
    "tcomb": "^3.2.29",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-immutable": "^4.9.1",
    "tslint-react": "^3.6.0",
    "typescript": "3.1.6"
  },
  "scripts": {
    "lint": "tslint -p tsconfig.json -c tslint.commit.json 'src/**/*.tsx' 'src/**/*.ts'",
    "typecheck": "tsc --noEmit -p .",
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "test:single": "CI=true react-app-rewired test",
    "eject": "react-app-rewired eject",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run typecheck && lint-staged && yarn run test:single"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn run lint"
    ],
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
