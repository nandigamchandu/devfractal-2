{
  "name": "technoidentity-devfractal",
  "version": "0.3.3",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "dependencies": {
    "@fortawesome/react-fontawesome": "^0.1.4",
    "axios": "^0.18.0",
    "bulma": "^0.7.4",
    "formik": "^1.5.1",
    "formik-persist": "^1.1.0",
    "fp-ts": "^1.14.2",
    "immer": "^2.0.0",
    "io-ts": "^1.8.2",
    "io-ts-reporters": "^0.0.21",
    "jest-cli": "^24.1.0",
    "react": "16.8.3",
    "react-content-loader": "^4.0.1",
    "react-dom": "16.8.3",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "react-use": "^5.4.1",
    "tcomb": "^3.2.29",
    "yup": "0.26.10"
  },
  "devDependencies": {
    "@types/jest": "^24.0.6",
    "@types/react": "^16.8.4",
    "@types/react-content-loader": "^3.1.4",
    "@types/react-dom": "^16.8.2",
    "@types/react-router": "^4.4.4",
    "@types/react-router-dom": "^4.3.1",
    "@types/yup": "^0.26.9",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "microbundle": "^0.10.0",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-immutable": "^5.3.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3",
    "typescript-tslint-plugin": "^0.3.1"
  },
  "peerDependencies": {
    "react": "16.8.3",
    "react-dom": "16.8.3",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "yup": "0.26.10"
  },
  "scripts": {
    "build": "microbundle",
    "clean": "rimraf build .rts2* node_modules yarn.lock",
    "start": "microbundle watch --compress false --sourcemap true",
    "lint:cmd": "tslint -p tsconfig.commit.json -c tslint.commit.json",
    "lint": "yarn lint:cmd 'src/**/*.tsx' 'src/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "validate:types": "tsc --noEmit -p tsconfig.commit.json",
    "test": "jest",
    "validate": "yarn lint && yarn validate:types"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn validate",
      "pre-build": "yarn validate",
      "pre-publish": "yarn validate"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:cmd --fix",
      "git add"
    ],
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "yarn prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
