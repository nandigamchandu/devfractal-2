{
  "name": "task-manager-client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "0.19.0",
    "bulma": "0.7.5",
    "chance": "1.0.18",
    "cors": "2.8.5",
    "date-fns": "1.30.1",
    "formik": "1.5.8",
    "fp-ts": "2.0.3",
    "immer": "3.1.3",
    "io-ts": "2.0.0",
    "io-ts-promise": "2.0.0",
    "query-string": "6.8.1",
    "react": "16.8.6",
    "react-datepicker": "2.8.0",
    "react-dom": "16.8.6",
    "react-router": "5.0.1",
    "react-router-dom": "5.0.1",
    "react-use": "10.2.0",
    "tcomb": "3.2.29",
    "technoidentity-devfractal": "*",
    "technoidentity-utils": "*",
    "typelevel-ts": "0.3.5",
    "use-immer": "0.3.3",
    "yup": "0.27.0"
  },
  "devDependencies": {
    "@bahmutov/parcel-json-server": "1.0.2",
    "@testing-library/jest-dom": "4.0.0",
    "@testing-library/react": "8.0.7",
    "@types/chance": "1.0.5",
    "@types/jest": "24.0.15",
    "@types/node": "12.6.8",
    "@types/react": "16.8.23",
    "@types/react-datepicker": "2.8.1",
    "@types/react-dom": "16.8.5",
    "@types/react-router-dom": "4.3.4",
    "@types/yup": "0.26.22",
    "cross-env": "5.2.0",
    "husky": "3.0.1",
    "jest": "24.8.0",
    "json-server": "0.15.0",
    "lint-staged": "9.2.1",
    "parcel-bundler": "1.12.3",
    "prettier": "1.18.2",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.2",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-immutable": "6.0.1",
    "tslint-react": "4.0.0",
    "typescript": "3.5.3",
    "typescript-tslint-plugin": "0.5.4"
  },
  "scripts": {
    "start": "parcel index.html --open",
    "server": "json-server data/todos.json",
    "pjs": "parcel-json-server --entrypoint index.html --database data/todos.json",
    "build": "parcel build index.html",
    "test": "cross-env NODE_ENV='test' jest",
    "test:watch": "yarn test --watch",
    "lint": "yarn tslint -p . -c tslint.json 'src/**/*.tsx' 'src/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "types": "tsc --noEmit -p .",
    "types:watch": "yarn types --watch",
    "validate": "yarn lint:fix && yarn types && yarn test"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn validate"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:fix",
      "git add"
    ],
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "yarn prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
